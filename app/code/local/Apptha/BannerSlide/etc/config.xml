    <global>
        <models>
            <bannerslide>
                <class>Apptha_BannerSlide_Model</class>
                <resourceModel>bannerslide_mysql4</resourceModel>
            </bannerslide>
            <bannerslide_mysql4>
                <class>Apptha_BannerSlide_Model_Mysql4</class>
                <entities>
                    <bannerslide>
                        <table>bannerslide</table>
                    </bannerslide>
                </entities>
            </bannerslide_mysql4>
        </models>
        <resources>
            <bannerslide_setup>
                <setup>
                    <module>Apptha_BannerSlide</module>
                    <class>Apptha_BannerSlide_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </bannerslide_setup>
            <bannerslide_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </bannerslide_write>
            <bannerslide_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </bannerslide_read>
        </resources>
        <rewrite>
           
        </rewrite>
        <blocks>
            <bannerslide>
                <class>Apptha_BannerSlide_Block</class>
            </bannerslide>
        </blocks>
        <helpers>
            <bannerslide>
                <class>Apptha_BannerSlide_Helper</class>
            </bannerslide>
        </helpers>
