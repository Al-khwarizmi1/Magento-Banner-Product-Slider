<?xml version="1.0"?>
<config>
    <modules>
        <Apptha_BannerSlide>
            <version>0.1.0</version>
        </Apptha_BannerSlide>
    </modules>
    <frontend>
        <routers>
            <bannerslide>
                <use>standard</use>
                <args>
                    <module>Apptha_BannerSlide</module>
                    <frontName>bannerslide</frontName>
                </args>
            </bannerslide>
        </routers>
        <layout>
            <updates>
                <bannerslide>
                    <file>bannerslide.xml</file>
                </bannerslide>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<bannerslide>
				<use>admin</use>
				<args>
					<module>Apptha_BannerSlide</module>
					<frontName>bannerslide</frontName>
				</args>
			</bannerslide>
        </routers>
    </admin>
