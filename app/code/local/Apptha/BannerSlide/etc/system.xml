<?xml version="1.0"?>
<config>
    <tabs>
        <Apptha translate="label" module="bannerslide">
            <label>Apptha</label>
            <sort_order>100</sort_order>
        </Apptha>
    </tabs>
    <sections>
        <bannerslide translate="label" module="bannerslide">
            <tab>Apptha</tab>
            <label>Banner Product Slider</label>
            <frontend_type>text</frontend_type>
            <sort_order>120</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="bannerslide">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <activate_apptha_bannerslide translate="label">
                            <label>Enable Banner Product Slider</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable Banner Product Slider</comment>
                        </activate_apptha_bannerslide>
                        
                        <select_apptha_textcolor translate="label">
                            <label>Product Details Color</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Please Click the text box to select color</comment>
                    </select_apptha_textcolor>
                   </fields> 
                </general>
            </groups>
        </bannerslide>
    </sections>
</config>